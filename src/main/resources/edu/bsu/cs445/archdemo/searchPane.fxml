<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root prefHeight="500" prefWidth="500" type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">

    <Label text="Enter Search Below." BorderPane.alignment="CENTER" />
    <HBox fx:id="searchHBox">
        <TextField fx:id="searchField" onAction="#search" />
        <Button fx:id="searchButton" onAction="#search" text="Search" />
    </HBox>

   <HBox prefHeight="100.0" prefWidth="200.0">
      <children>
         <Label text="Filter by Subject:">
            <padding>
               <Insets right="20.0" />
            </padding>
         </Label>

         <CheckBox fx:id="JapanSearchToggle" mnemonicParsing="false" text="Japan">
            <HBox.margin>
               <Insets />
            </HBox.margin>
            <padding>
               <Insets right="20.0" />
            </padding>
         </CheckBox>

         <CheckBox fx:id="AmericaSearchToggle" mnemonicParsing="false" text="America">
            <HBox.margin>
               <Insets />
            </HBox.margin>
            <padding>
               <Insets right="20.0" />
            </padding>
         </CheckBox>
         <CheckBox mnemonicParsing="false" text="CheckBox" />

      </children>
      <VBox.margin>
         <Insets bottom="15.0" top="15.0" />
      </VBox.margin>
   </HBox>

    <HBox>
        <Label text="Last search yielded " />
        <Label fx:id="resultCount" text="0" />
        <Label text=" results" />
    </HBox>

   <ScrollPane minViewportWidth="500.0" prefHeight="500.0" prefWidth="200.0">
     <content>
       <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="200.0" />
         <VBox fx:id="resultBox" />
     </content>
   </ScrollPane>
</fx:root>
